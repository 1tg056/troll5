  <h1>üé≤ QR Troll Generator üéµ</h1>
  <button onclick="generateQR()">T·∫°o QR Ng·∫´u Nhi√™n</button>
  <div id="qrcode"></div>

  <script>
    const links = [
      "https://www.youtube.com/watch?v=6n3pFFPSlW4", 
      "https://www.youtube.com/watch?v=dQw4w9WgXcQ", 
      "https://www.youtube.com/watch?v=j5a0jTc9S10", 
      "https://www.youtube.com/watch?v=9Deg7VrpHbM", 
      "https://www.youtube.com/watch?v=ZZ5LpwO-An4"  
    ];

    function generateQR() {
      const randomLink = links[Math.floor(Math.random() * links.length)];
      document.getElementById('qrcode').innerHTML = "";
      QRCode.toCanvas(randomLink, { width: 200 }, function (err, canvas) {
        if (err) console.error(err);
        document.getElementById('qrcode').appendChild(canvas);
      });
    }
  </script>
